<div class="min-h-screen p-4 md:p-8 relative overflow-hidden">
  <!-- Dynamic Background -->
  <div class="fixed inset-0 pointer-events-none">
    <div
      class="absolute top-0 left-0 w-full h-full bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-slate-900 via-[#0a0a0a] to-black">
    </div>
    <div class="absolute top-[-10%] left-[-10%] w-[40%] h-[40%] bg-blue-500/10 rounded-full blur-[100px]"></div>
    <div class="absolute bottom-[-10%] right-[-10%] w-[40%] h-[40%] bg-amber-500/10 rounded-full blur-[100px]"></div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto space-y-8">

    <!-- 1. HEADER SECTION -->
    <div class="flex flex-col md:flex-row md:items-end justify-between gap-4 border-b border-white/5 pb-6">
      <div>
        <h6 class="text-amber-500 font-bold tracking-widest text-xs uppercase mb-2">
          <i class="fa-solid fa-satellite-dish mr-1 animate-pulse"></i> SNG Command Center
        </h6>
        <h1 class="text-3xl md:text-5xl font-black text-white leading-tight font-display">
          DASHBOARD
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-indigo-500">PRO</span>
        </h1>
        <p class="text-slate-400/80 mt-1 font-light">Real-time logistics analytics & operations control</p>
      </div>

      <div class="flex gap-3">
        <a href="/orders/new"
          class="group relative px-6 py-3 bg-amber-500 hover:bg-amber-400 text-black font-bold uppercase tracking-wider text-sm clip-path-slant transition-all hover:scale-105">
          <span class="relative z-10 flex items-center gap-2">
            <i class="fa-solid fa-plus"></i> New Order
          </span>
          <div
            class="absolute inset-0 bg-white/20 translate-y-full group-hover:translate-y-0 transition-transform duration-300">
          </div>
        </a>
        <a href="/orders/scan"
          class="px-5 py-3 border border-white/20 hover:border-white/50 text-white font-bold uppercase tracking-wider text-sm clip-path-slant transition-all hover:bg-white/5">
          <i class="fa-solid fa-qrcode"></i> Scan
        </a>
      </div>
    </div>

    <!-- BENTO GRID LAYOUT -->
    <div class="grid grid-cols-1 md:grid-cols-6 md:grid-rows-2 gap-4 h-auto md:h-[600px]">

      <!-- 1. MAIN STATS (Large Box - Top Left) -->
      <div
        class="glass-panel col-span-1 md:col-span-4 md:row-span-1 p-6 relative group overflow-hidden flex flex-col justify-between">
        <div class="bg-gradient-mesh"></div>
        <div class="flex justify-between items-start z-10">
          <div>
            <p class="text-sm font-semibold text-slate-400 mb-1 flex items-center gap-2">
              <span class="w-2 h-2 rounded-full bg-emerald-500 animate-pulse"></span>
              Total Revenue (Today)
            </p>
            <h2 class="text-5xl font-bold text-white tracking-tight text-value">
              <span class="text-2xl text-slate-500 font-normal">฿</span>
              <%= Number(kpi.todayRevenue).toLocaleString() %>
            </h2>
            <div class="mt-4 flex gap-3">
              <span
                class="bg-emerald-500/10 text-emerald-400 px-3 py-1 rounded-full text-xs font-medium border border-emerald-500/10">
                +฿<%= Number(kpi.todayProfit).toLocaleString() %> Profit
              </span>
              <span
                class="bg-blue-500/10 text-blue-400 px-3 py-1 rounded-full text-xs font-medium border border-blue-500/10">
                <%= kpi.todayOrders %> Orders
              </span>
            </div>
          </div>
          <div class="p-3 bg-white/5 rounded-2xl border border-white/5 group-hover:bg-white/10 transition-colors">
            <i class="fa-solid fa-chart-pie text-2xl text-white"></i>
          </div>
        </div>

        <!-- Mini Chart Area -->
        <div class="h-24 w-full mt-4 mask-fade-bottom">
          <canvas id="revenueChart"></canvas>
        </div>
      </div>

      <!-- 2. ACTION PANEL (Top Right) -->
      <div
        class="glass-panel col-span-1 md:col-span-2 md:row-span-1 p-6 flex flex-col justify-center gap-4 bg-gradient-to-br from-blue-600/20 to-indigo-600/20">
        <div class="text-center mb-2">
          <div
            class="w-12 h-12 bg-blue-500 rounded-2xl mx-auto flex items-center justify-center text-white text-xl shadow-lg shadow-blue-500/30 mb-3">
            <i class="fa-solid fa-rocket"></i>
          </div>
          <h3 class="text-white font-bold text-lg">Quick Actions</h3>
          <p class="text-slate-400 text-xs">Manage your logistics instanty</p>
        </div>
        <a href="/orders/new"
          class="w-full bg-white text-black font-bold py-3 rounded-xl text-center hover:bg-slate-200 transition-colors shadow-lg">
          <i class="fa-solid fa-plus mr-2"></i> New Order
        </a>
        <a href="/orders/scan"
          class="w-full bg-black/20 text-white font-semibold py-3 rounded-xl text-center border border-white/10 hover:bg-white/10 transition-colors backdrop-blur-md">
          <i class="fa-solid fa-qrcode mr-2"></i> Scan Code
        </a>
      </div>

      <!-- 3. MONTHLY SUMMARY (Bottom Left) -->
      <div
        class="glass-panel col-span-1 md:col-span-2 md:row-span-1 p-6 flex flex-col justify-between border-t-4 border-amber-500">
        <div>
          <p class="text-xs font-bold text-slate-400 uppercase tracking-widest mb-4">Monthly Overview</p>
          <div class="space-y-4">
            <div class="flex justify-between items-end">
              <span class="text-slate-300">Revenue</span>
              <span class="text-2xl font-bold text-white text-value">฿<%= Number(kpi.monthRevenue).toLocaleString() %>
                  </span>
            </div>
            <div class="w-full h-1.5 bg-white/5 rounded-full overflow-hidden">
              <div class="h-full bg-amber-500 w-[65%] shadow-[0_0_10px_#f59e0b]"></div>
            </div>
            <div class="flex justify-between items-end">
              <span class="text-slate-300">Orders</span>
              <span class="text-xl font-bold text-white text-value">
                <%= kpi.monthOrders %>
              </span>
            </div>
          </div>
        </div>
      </div>

      <!-- 4. RECENT FEED (Bottom Middle/Right) -->
      <div class="glass-panel col-span-1 md:col-span-4 md:row-span-1 p-0 overflow-hidden flex flex-col">
        <div class="p-5 border-b border-white/5 flex justify-between items-center bg-black/20">
          <h3 class="text-white font-bold text-sm flex items-center gap-2">
            <span class="w-1.5 h-1.5 bg-pink-500 rounded-full"></span> Live Activity
          </h3>
          <a href="/orders"
            class="text-[10px] bg-white/5 hover:bg-white/10 px-2 py-1 rounded text-slate-300 transition-colors">View
            All</a>
        </div>
        <div class="flex-1 overflow-y-auto px-2 custom-scrollbar">
          <% latest.forEach(o=> { %>
            <div
              class="p-3 border-b border-white/5 hover:bg-white/5 transition-colors flex items-center justify-between group rounded-lg my-1">
              <div class="flex items-center gap-3">
                <div
                  class="w-8 h-8 rounded-lg bg-slate-800 flex items-center justify-center text-slate-400 font-mono text-[10px] border border-white/5">
                  <%= o.job_no.slice(-3) %>
                </div>
                <div>
                  <div class="flex items-center gap-2">
                    <span class="text-sm font-bold text-slate-200">
                      <%= o.sender_name || 'Guest' %>
                    </span>
                    <span class="text-[10px] text-slate-500">
                      <%= o.job_no %>
                    </span>
                  </div>
                  <div class="flex gap-2 text-[10px] text-slate-500">
                    <span>
                      <%= o.created_at.toLocaleTimeString('th-TH', {hour: '2-digit' , minute:'2-digit'}) %>
                    </span>
                    <span class="<%= o.status === 'Delivered' ? 'text-emerald-500' : 'text-amber-500' %>">
                      <%= o.status %>
                    </span>
                  </div>
                </div>
              </div>
              <% if(o.cod_amount> 0) { %>
                <div class="text-right">
                  <span
                    class="text-xs font-bold text-emerald-400 bg-emerald-500/10 px-2 py-1 rounded border border-emerald-500/10">฿
                    <%= Number(o.cod_amount).toLocaleString() %></span>
                </div>
                <% } %>
            </div>
            <% }) %>
        </div>
      </div>

    </div>
  </div>
</div>

<style>
  /* Local Overrides for Refined Dashboard */
  .font-display {
    font-family: 'Orbitron', 'Prompt', sans-serif;
  }

  .glass-panel {
    background: rgba(13, 13, 13, 0.6);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 12px;
  }

  .clip-path-slant {
    clip-path: polygon(10% 0, 100% 0, 100% 100%, 0 100%, 0 20%);
    /* Cool corner cut */
  }
</style>

<script>
  // ... (Keep existing chart script logic, it's fine)
  Chart.defaults.font.family = "'Prompt', sans-serif";
  Chart.defaults.color = '#64748b';
  Chart.defaults.borderColor = 'rgba(255, 255, 255, 0.05)';

  const revenueData = <% - JSON.stringify(charts.revenue30 || []) %>;
  const revenueCtx = document.getElementById('revenueChart');
  const gradient = revenueCtx.getContext('2d').createLinearGradient(0, 0, 0, 300);
  gradient.addColorStop(0, 'rgba(59, 130, 246, 0.5)'); // Blue
  gradient.addColorStop(1, 'rgba(59, 130, 246, 0)');

  new Chart(revenueCtx, {
    type: 'line',
    data: {
      labels: revenueData.map(i => i.d),
      datasets: [{
        label: 'Revenue',
        data: revenueData.map(i => i.rev),
        borderColor: '#3b82f6',
        backgroundColor: gradient,
        borderWidth: 2,
        tension: 0.4,
        fill: true,
        pointRadius: 0,
        pointHoverRadius: 6
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: { legend: { display: false } },
      scales: {
        y: { grid: { borderDash: [4, 4] } },
        x: { grid: { display: false } }
      }
    }
  });
</script>