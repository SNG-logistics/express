<div class="min-h-screen p-4 md:p-8 relative overflow-hidden">
  <!-- Dynamic Background -->
  <div class="fixed inset-0 pointer-events-none">
    <div
      class="absolute top-0 left-0 w-full h-full bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-slate-900 via-[#0a0a0a] to-black">
    </div>
    <div class="absolute top-[-10%] left-[-10%] w-[40%] h-[40%] bg-blue-500/10 rounded-full blur-[100px]"></div>
    <div class="absolute bottom-[-10%] right-[-10%] w-[40%] h-[40%] bg-amber-500/10 rounded-full blur-[100px]"></div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto space-y-8">

    <!-- 1. HEADER SECTION -->
    <div class="flex flex-col md:flex-row md:items-end justify-between gap-4 border-b border-white/5 pb-6">
      <div>
        <h6 class="text-amber-500 font-bold tracking-widest text-xs uppercase mb-2">
          <i class="fa-solid fa-satellite-dish mr-1 animate-pulse"></i> SNG Command Center
        </h6>
        <h1 class="text-3xl md:text-5xl font-black text-white leading-tight font-display">
          DASHBOARD
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-indigo-500">PRO</span>
        </h1>
        <p class="text-slate-400/80 mt-1 font-light">Real-time logistics analytics & operations control</p>
      </div>

      <div class="flex gap-3">
        <a href="/orders/new"
          class="group relative px-6 py-3 bg-amber-500 hover:bg-amber-400 text-black font-bold uppercase tracking-wider text-sm clip-path-slant transition-all hover:scale-105">
          <span class="relative z-10 flex items-center gap-2">
            <i class="fa-solid fa-plus"></i> New Order
          </span>
          <div
            class="absolute inset-0 bg-white/20 translate-y-full group-hover:translate-y-0 transition-transform duration-300">
          </div>
        </a>
        <a href="/orders/scan"
          class="px-5 py-3 border border-white/20 hover:border-white/50 text-white font-bold uppercase tracking-wider text-sm clip-path-slant transition-all hover:bg-white/5">
          <i class="fa-solid fa-qrcode"></i> Scan
        </a>
      </div>
    </div>

    <!-- 2. KPI CARDS (2x2 Grid) -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
      <!-- Card: Today Orders -->
      <div
        class="glass-panel p-5 relative overflow-hidden group hover:-translate-y-1 transition-transform duration-300 border-l-4 border-blue-500">
        <div class="flex justify-between items-start z-10 relative">
          <div>
            <p class="text-xs font-bold text-slate-400 uppercase tracking-widest mb-1">Orders (Today)</p>
            <h3 class="text-4xl font-black text-white font-display">
              <%= kpi.todayOrders %>
            </h3>
          </div>
          <div
            class="w-12 h-12 rounded-xl bg-blue-500/20 flex items-center justify-center text-blue-400 text-xl group-hover:bg-blue-500 group-hover:text-white transition-colors shadow-[0_0_15px_rgba(59,130,246,0.3)]">
            <i class="fa-solid fa-cube"></i>
          </div>
        </div>
        <div
          class="absolute -bottom-4 -right-4 text-9xl text-white/5 rotate-12 group-hover:rotate-0 transition-transform duration-500 pointer-events-none">
          <i class="fa-solid fa-cube"></i>
        </div>
      </div>

      <!-- Card: Today Revenue -->
      <div
        class="glass-panel p-5 relative overflow-hidden group hover:-translate-y-1 transition-transform duration-300 border-l-4 border-emerald-500">
        <div class="flex justify-between items-start z-10 relative">
          <div>
            <p class="text-xs font-bold text-slate-400 uppercase tracking-widest mb-1">Revenue (Today)</p>
            <h3 class="text-4xl font-black text-emerald-400 font-display">
              <span class="text-lg align-top opacity-50">฿</span>
              <%= Number(kpi.todayRevenue).toLocaleString() %>
            </h3>
          </div>
          <div
            class="w-12 h-12 rounded-xl bg-emerald-500/20 flex items-center justify-center text-emerald-400 text-xl group-hover:bg-emerald-500 group-hover:text-white transition-colors shadow-[0_0_15px_rgba(16,185,129,0.3)]">
            <i class="fa-solid fa-bolt"></i>
          </div>
        </div>
        <p class="text-[10px] text-emerald-500/80 mt-2 font-mono flex items-center gap-1">
          <i class="fa-solid fa-arrow-trend-up"></i> Profit: +฿<%= Number(kpi.todayProfit).toLocaleString() %>
        </p>
      </div>

      <!-- Card: Monthly Orders -->
      <div
        class="glass-panel p-5 relative overflow-hidden group hover:-translate-y-1 transition-transform duration-300 border-l-4 border-purple-500">
        <div class="flex justify-between items-start z-10 relative">
          <div>
            <p class="text-xs font-bold text-slate-400 uppercase tracking-widest mb-1">Orders (Month)</p>
            <h3 class="text-4xl font-black text-white font-display">
              <%= kpi.monthOrders %>
            </h3>
          </div>
          <div
            class="w-12 h-12 rounded-xl bg-purple-500/20 flex items-center justify-center text-purple-400 text-xl group-hover:bg-purple-500 group-hover:text-white transition-colors shadow-[0_0_15px_rgba(168,85,247,0.3)]">
            <i class="fa-solid fa-layer-group"></i>
          </div>
        </div>
        <!-- Progress Bar -->
        <div class="w-full h-1 bg-white/10 mt-4 rounded-full overflow-hidden">
          <div class="h-full bg-purple-500 w-[70%]"></div>
        </div>
      </div>

      <!-- Card: Monthly Revenue -->
      <div
        class="glass-panel p-5 relative overflow-hidden group hover:-translate-y-1 transition-transform duration-300 border-l-4 border-amber-500">
        <div class="flex justify-between items-start z-10 relative">
          <div>
            <p class="text-xs font-bold text-slate-400 uppercase tracking-widest mb-1">Revenue (Month)</p>
            <h3 class="text-4xl font-black text-amber-400 font-display">
              <span class="text-lg align-top opacity-50">฿</span>
              <%= Number(kpi.monthRevenue).toLocaleString() %>
            </h3>
          </div>
          <div
            class="w-12 h-12 rounded-xl bg-amber-500/20 flex items-center justify-center text-amber-400 text-xl group-hover:bg-amber-500 group-hover:text-white transition-colors shadow-[0_0_15px_rgba(245,158,11,0.3)]">
            <i class="fa-solid fa-trophy"></i>
          </div>
        </div>
        <p class="text-[10px] text-amber-500/80 mt-2 font-mono flex items-center gap-1">
          <i class="fa-solid fa-sack-dollar"></i> Profit: +฿<%= Number(kpi.monthProfit).toLocaleString() %>
        </p>
      </div>
    </div>

    <!-- 3. CHARTS & RECENT (Grid) -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

      <!-- Main Chart -->
      <div class="lg:col-span-2 glass-panel p-6 border-t border-white/5">
        <div class="flex items-center justify-between mb-6">
          <h3 class="font-display font-bold text-lg text-white flex items-center gap-2">
            <span class="w-2 h-6 bg-blue-500 rounded-sm"></span> Performance Logic
          </h3>
          <select
            class="bg-black/50 border border-white/10 text-xs text-slate-300 rounded px-3 py-1 outline-none focus:border-blue-500">
            <option>Last 30 Days</option>
          </select>
        </div>
        <div class="h-[300px] w-full">
          <canvas id="revenueChart"></canvas>
        </div>
      </div>

      <!-- Recent Activity -->
      <div class="glass-panel p-0 border-t border-white/5 flex flex-col">
        <div class="p-6 border-b border-white/5 flex justify-between items-center">
          <h3 class="font-display font-bold text-lg text-white flex items-center gap-2">
            <span class="w-2 h-6 bg-pink-500 rounded-sm"></span> Live Feed
          </h3>
          <a href="/orders" class="text-xs text-pink-500 hover:text-pink-400 font-bold uppercase tracking-wider">View
            All</a>
        </div>

        <div class="flex-1 overflow-y-auto max-h-[300px] custom-scrollbar">
          <% latest.forEach(o=> { %>
            <div
              class="p-4 border-b border-white/5 hover:bg-white/5 transition-colors flex items-center justify-between group">
              <div class="flex items-center gap-3">
                <div
                  class="w-10 h-10 rounded bg-white/5 flex items-center justify-center text-slate-400 group-hover:text-white transition-colors font-mono text-xs">
                  #<%= o.job_no.slice(-4) %>
                </div>
                <div>
                  <div class="flex items-center gap-2">
                    <span class="text-sm font-bold text-white">
                      <%= o.job_no %>
                    </span>
                    <% if (o.direction==='TH_TO_LA' ) { %>
                      <span
                        class="text-[10px] px-1.5 py-0.5 bg-blue-500/20 text-blue-400 rounded border border-blue-500/20">TH→LA</span>
                      <% } else { %>
                        <span
                          class="text-[10px] px-1.5 py-0.5 bg-amber-500/20 text-amber-400 rounded border border-amber-500/20">LA→TH</span>
                        <% } %>
                  </div>
                  <p class="text-xs text-slate-500 mt-0.5">
                    <%= o.created_at.toLocaleTimeString('th-TH', {hour: '2-digit' , minute:'2-digit'}) %> • <%= o.status
                        %>
                  </p>
                </div>
              </div>
              <div class="text-right">
                <% if(o.cod_amount> 0) { %>
                  <span class="block text-emerald-400 font-bold font-mono text-sm">฿<%=
                      Number(o.cod_amount).toLocaleString() %></span>
                  <% } else { %>
                    <span class="block text-slate-600 font-mono text-sm">-</span>
                    <% } %>
              </div>
            </div>
            <% }) %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Local Overrides for Refined Dashboard */
  .font-display {
    font-family: 'Orbitron', 'Prompt', sans-serif;
  }

  .glass-panel {
    background: rgba(13, 13, 13, 0.6);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 12px;
  }

  .clip-path-slant {
    clip-path: polygon(10% 0, 100% 0, 100% 100%, 0 100%, 0 20%);
    /* Cool corner cut */
  }
</style>

<script>
  // ... (Keep existing chart script logic, it's fine)
  Chart.defaults.font.family = "'Prompt', sans-serif";
  Chart.defaults.color = '#64748b';
  Chart.defaults.borderColor = 'rgba(255, 255, 255, 0.05)';

  const revenueData = <% - JSON.stringify(charts.revenue30 || []) %>;
  const revenueCtx = document.getElementById('revenueChart');
  const gradient = revenueCtx.getContext('2d').createLinearGradient(0, 0, 0, 300);
  gradient.addColorStop(0, 'rgba(59, 130, 246, 0.5)'); // Blue
  gradient.addColorStop(1, 'rgba(59, 130, 246, 0)');

  new Chart(revenueCtx, {
    type: 'line',
    data: {
      labels: revenueData.map(i => i.d),
      datasets: [{
        label: 'Revenue',
        data: revenueData.map(i => i.rev),
        borderColor: '#3b82f6',
        backgroundColor: gradient,
        borderWidth: 2,
        tension: 0.4,
        fill: true,
        pointRadius: 0,
        pointHoverRadius: 6
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: { legend: { display: false } },
      scales: {
        y: { grid: { borderDash: [4, 4] } },
        x: { grid: { display: false } }
      }
    }
  });
</script>